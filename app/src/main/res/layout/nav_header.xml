<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/nav_header_spacing">

        <ImageView
            android:layout_width="@dimen/nav_header_image_size"
            android:layout_height="@dimen/nav_header_image_size"
            android:layout_marginBottom="@dimen/nav_header_image_spacing"
            android:contentDescription="@string/app_icon_label"
            android:scaleType="centerCrop"
            app:circleImageUrl="@{@string/icon_url}"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</layout>